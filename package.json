{
  "name": "koburobu",
  "version": "0.1.2",
  "description": "This project is for handling blob storage in Azure",
  "main": "dist/main.js",
  "scripts": {
    "compile": "tsc && shx cp src/index.html dist/index.html && shx cp src/style.css dist/style.css && shx mkdir -p dist/assets && shx cp -r assets/* dist/assets/",
    "build": "npm run compile && electron-builder",
    "watch": "tsc -w",
    "start": "npm run compile && electron .",
    "dev": "npm run compile && electron ."
  },
  "keywords": [],
  "author": "LosManos",
  "license": "LGPLv3+NoEvil",
  "devDependencies": {
    "@types/marked": "^5.0.2",
    "electron": "^40.0.0",
    "electron-builder": "^25.1.8",
    "shx": "^0.4.0",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.30.0",
    "lucide": "^0.563.0",
    "marked": "^17.0.1"
  },
  "build": {
    "appId": "com.losmanos.ushi-suki-koburobu",
    "productName": "KoBurobu",
    "directories": {
      "output": "release/${version}",
      "buildResources": "assets"
    },
    "files": [
      "dist",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ],
      "icon": "assets/logo.png"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/logo.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/logo.png"
    },
    "publish": {
      "provider": "github",
      "owner": "LosManos",
      "repo": "Ushi-Suki-KoBurobu"
    }
  }
}